#include <algorithm>
#include <iostream>
#include <vector>

using namespace std;

int main() {
    int n, m;
    cin >> n >> m;
    vector<vector<int>> dp(n, vector<int>(m));
    for (int i = 0; i < n; i++)
        for (int j = 0; j < m; j++)
            cin >> dp[i][j];
    for (int i = 1; i < n; i++)
        dp[i][0] += dp[i - 1][0];
    for (int i = 1; i < m; i++)
        dp[0][i] += dp[0][i - 1];
    for (int i = 1; i < n; i++)
        for (int j = 1; j < m; j++)
            dp[i][j] += max(dp[i - 1][j], dp[i][j - 1]);
    cout << dp[n - 1][m - 1] << '\n';
    cout << "------------------------------\n";
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++)
            cout << dp[i][j] << ' ';
        cout << '\n';
    }
    cout << "------------------------------\n";
    int i = n - 1, j = m - 1;
    while (i != 0 && j != 0) {
        cout << i + 1 << ' ' << j + 1 << '\n';
        if (dp[i - 1][j] > dp[i][j - 1])
            i--;
        else
            j--;
    }
    if (i == 0)
        for (int k = j; k >= 0; k--)
            cout << i + 1 << ' ' << k + 1 << '\n';
    else
        for (int k = i; k >= 0; k--)
            cout << k + 1 << ' ' << j + 1 << '\n';
}
